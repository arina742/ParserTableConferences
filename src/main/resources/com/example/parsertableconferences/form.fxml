            <TableView fx:id="mainTab" prefHeight="500.0" prefWidth="785.0" AnchorPane.leftAnchor="180" AnchorPane.topAnchor="40">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="382" sortable="false" text="Name" resizable="false"/>
                    <TableColumn fx:id="dateColumn" prefWidth="80" sortable="false" text="Date" resizable="false"/>
                    <TableColumn fx:id="infoColumn" prefWidth="193" sortable="false" text="Info" resizable="false"/>
                    <TableColumn fx:id="favColumn" prefWidth="76" sortable="false" styleClass="center-align" text="Favorites" resizable="false"/>
                </columns>
            </TableView>
            <TextArea fx:id="maintxt" editable="false" prefHeight="226.0" prefWidth="150.0" scaleShape="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" />
        </children>
    </AnchorPane>

