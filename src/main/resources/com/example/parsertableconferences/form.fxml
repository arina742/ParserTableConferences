<VBox prefHeight="375.0" prefWidth="1006.0" spacing="20.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.parsertableconferences.Parser">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

    <AnchorPane>
        <children>
<!--            <Button onAction="#Refresh" text="Refresh" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" />-->
            <Label text="Search" AnchorPane.leftAnchor="180" AnchorPane.topAnchor="3">
            <font>
               <Font size="16.0" />
            </font></Label>
            <TextField fx:id="filterField" prefHeight="30.0" prefWidth="380.0" promptText="Type to search" AnchorPane.leftAnchor="234" AnchorPane.topAnchor="0">
            <font>
               <Font size="13.0" />
            </font></TextField>
            <Button onAction="#Refresh" text="Refresh" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" />
